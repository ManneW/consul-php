{
    "name": "Consul",
    "apiVersion": "0.2",

    "description": "This is the Consul.io HTTP API",
    "operations": {
        "GetValue": {
            "httpMethod": "GET",
            "uri": "/v1/kv/{key}",
            "summary": "Gets a value from the key/value storage",
            "responseClass": "BR\\Consul\\Model\\KeyValue",
            "parameters": {
                "key": {
                    "location": "uri",
                    "description": "Key of the value to retrieve",
                    "required": true
                },
                "datacenter": {
                    "sentAs": "dc",
                    "location": "query",
                    "description": "Which datacenter to query",
                    "required": false
                }
            }
        },
        "SetValue": {
            "httpMethod": "PUT",
            "uri": "/v1/kv/{key}",
            "summary": "Sets a value to the key/value storage",
            "parameters": {
                "key": {
                    "location": "uri",
                    "description": "Key of the value to retrieve",
                    "required": true
                },
                "value": {
                    "location": "body",
                    "description": "the new value",
                    "required": true
                },
                "datacenter": {
                    "sentAs": "dc",
                    "location": "query",
                    "description": "Which datacenter to store to",
                    "required": false
                }
            }
        },
        "DeleteValue": {
            "httpMethod": "DELETE",
            "uri": "/v1/kv/{key}",
            "summary": "Gets a value from the key/value storage",
            "parameters": {
                "key": {
                    "location": "uri",
                    "description": "Key of the value to delete",
                    "required": true
                },
                "datacenter": {
                    "sentAs": "dc",
                    "location": "query",
                    "description": "Which datacenter to delete from",
                    "required": false
                }
            }
        },
        "AgentServiceRegister": {
            "httpMethod": "PUT",
            "uri": "/v1/agent/service/register",
            "summary": "Registers a service with the agent",
            "parameters": {
                "Name": {
                    "location": "json",
                    "description": "Name of the service",
                    "required": true,
                    "type": "string"
                },
                "ID": {
                    "location": "json",
                    "description": "Id of the service",
                    "required": false,
                    "type": "string"
                },
                "Port": {
                    "location": "json",
                    "description": "Port of the service",
                    "required": false,
                    "type": "integer"
                },
                "Tags": {
                    "location": "json",
                    "description": "Tags of the service",
                    "required": false,
                    "type": "array"
                }
            }
        },
        "AgentGetServices": {
            "httpMethod": "GET",
            "uri": "/v1/agent/services",
            "summary": "Retrieves a list of services that are registered with this agent",
            "responseClass": "BR\\Consul\\Model\\ServiceList"
        }
    }
}
